[alias]
	alias = config --get-regexp alias
	ca = !git add -A && git commit
	amend = commit --amend --reuse-message=HEAD
	lg = log --date=short --pretty=custom
	s = status -sb
	tags = tag -l
	branches = branch -a
	remotes = remote -v

	# Usefull checkes on specific tasks
	overview = lg --all --no-merges --since="2 weeks"
	recap = lg --all --no-merges --author="$(git config user.email)"
	stats = shortlog --summary --numbered
	contributors = stats

	# Pull in remote changes for the current repository and all its submodules.
	pull-all = pull --recurse-submodules

	# Clone a repository including all submodules.
	clone-all = clone --recursive

	# Remove the old tag with this name and tag the latest commit with it.
	retag = "!r() { git tag -d $1 && git push origin :refs/tags/$1 && git tag $1; }; r"

	# Diff
	# Show the diff between the latest commit and the current state
	d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
	# `git di $number` shows the diff between the state `$number` revisions ago and the current state
	di = !"d() { git diff --patch-with-stat HEAD~$1; }; git diff-index --quiet HEAD -- || clear; d"

	# Find
	# branches containing commit
	fb = "!f() { git branch -a --contains $1; }; f"
	# tags containing commit
	ft = "!f() { git describe --always --contains $1; }; f"
	# by source code
	fc = "!f() { git log --pretty=custom --date=short -S$1; }; f"
	# by commit message
	fm = "!f() { git log --pretty=custom --date=short --grep=$1; }; f"

[user]

[core]
	excludesFile = ~/.gitignore
	ignoreCase = false
	editor = nano
	# Make `git rebase` safer on macOS
	# More info: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
	trustcTime = false
	# Prevent showing files whose names contain non-ASCII symbols as unversioned.
	# http://michael-kuehnel.de/git/2014/11/21/git-mac-osx-and-german-umlaute.html
	precomposeUnicode = false

[pretty]
	custom = "%C(magenta)%h%C(red)%d %C(reset)%ad %C(green)%s %C(blue)(%an)"
	# %an = author name
  # %s  = message
  # %ad = date
  # %d  = decorations (branch, heads or tags)
  # %h  = hash (abbreviated)

[tag]
	sort = -version:refname

[help]
	autoCorrect = 1 # Automatically correct typos

[push]
	# Make `git push` push relevant annotated tags when pushing branches out.
	followTags = true

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[url "git@github.com:"]
	insteadOf = "gh:"
	pushInsteadOf = "github:"
	pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
	insteadOf = "github:"

[url "git@gist.github.com:"]
	insteadOf = "gst:"
	pushInsteadOf = "gist:"
	pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
	insteadOf = "gist:"

[init]
	defaultBranch = main
