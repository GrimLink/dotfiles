{
  "theme": {
    "mode": "system",
    "light": "GitHub Light Tritanopia",
    "dark": "GitHub Dark Dimmed",
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha",
  },
  "buffer_font_size": 17.0,
  "ui_font_size": 19.0,
  "ui_font_family": ".SystemUIFont",
  "agent_ui_font_size": 17.0,
  "agent_buffer_font_size": 17.0,
  "base_keymap": "VSCode",
  "title_bar": { "show_branch_icon": true },
  "tabs": {
    "file_icons": true,
    "git_status": true,
  },
  "agent": {
    "default_width": 500.0,
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash-lite",
    },
  },
  "collaboration_panel": { "dock": "right" },
  "git_panel": {
    "dock": "right",
    "default_width": 500.0,
    "tree_view": true,
  },
  "outline_panel": { "dock": "right" },
  "project_panel": {
    "default_width": 500.0,
    "dock": "right",
  },
  "colorize_brackets": true,
  "show_whitespaces": "trailing",
  "soft_wrap": "editor_width",
  "autosave": "on_window_change",
  "lsp": {
    "snippet-completion-server": {
      "settings": {
        "feature_paths": true,
      },
    },
    "phpcs": {
      "settings": {
        "standard": "PSR4",
      },
    },
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "phpcs", "!phpactor"],
      "format_on_save": "off",
    },
    "CSS": {
      "language_servers": [
        "tailwindcss-intellisense-css",
        "!vscode-css-language-server",
      ],
    },
  },
  "file_types": {
    "tailwindcss": ["**/tailwind/**/*.css"],
    "json": ["*.tokens"],
    "html": ["*.vue", "*.twig", "*.njk"],
    "xml": ["*.svg"],
    "css": ["*.less"],
  },
  // AI
  "edit_predictions": {
    "mode": "subtle",
  },
  "profiles": {
    "presentation": {
      "agent_ui_font_size": 28.0,
      "agent_buffer_font_size": 28.0,
      "buffer_font_size": 28.0,
    },
  },
  "auto_install_extensions": {
    // Languages
    "html": true,
    "php": true,
    "xml": true,
    "astro": true,
    "rainbow-csv": true,
    // Syntax (linter / formater)
    "editorconfig": true,
    "phpcs": true,
    // Editor
    "emmet": true,
    "github-theme": true,
    "material-icon-theme": true,
  },
}
