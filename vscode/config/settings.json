{
  "cSpell.allowCompoundWords": true,
  "cSpell.showStatus": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Menlo, monospace, 'Courier New', monospace",
  "editor.fontSize": 15,
  "editor.formatOnSave": true,
  "editor.minimap.maxColumn": 80,
  "editor.minimap.showSlider": "always",
  "editor.quickSuggestionsDelay": 30,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",
  "emmet.includeLanguages": {
    "vue": "html",
    "postcss": "css"
  },
  "emmet.syntaxProfiles": {
    "postcss": "css"
  },
  "files.associations": {
    ".*rc": "json",
    ".*ignore": "ignore",
    ".gitmodules": "properties"
  },
  "files.defaultLanguage": "markdown",
  "git.confirmSync": false,
  "liveServer.settings.donotShowInfoMsg": true,
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.toc.levels": "2..6",
  "polacode.target": "snippet",
  "polacode.transparentBackground": true,
  "presentationMode.zoomLevel": 3,
  "prettier.disableLanguages": [],
  "projectManager.git.baseFolders": ["$home/projects"],
  "svgviewer.enableautopreview": false,
  "terminal.integrated.fontSize": 14,
  "vetur.format.enable": false,
  "vetur.grammar.customBlocks": {
    "docs": "md",
    "i18n": "json",
    "page-query": "graphql",
    "static-query": "graphql"
  },
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Atom Material Theme",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#fff2",
    // https://github.com/Tyriar/vscode-snazzy
    "terminalCursor.background": "#282a36",
    "terminalCursor.foreground": "#97979b",
    "terminal.selectionBackground": "#97979b33",
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb"
  },
  "workbench.iconTheme": "file-icons",
  "workbench.startupEditor": "none",
  "zenMode.fullScreen": false,
  "zenMode.hideLineNumbers": false,
  "html.format.extraLiners": "",
  "css.validate": false, // For stylelint
  "less.validate": false, // For stylelint
  "scss.validate": false, // For stylelint
  "javascript.validate.enable": false, // For TS errors bug in JS
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[yaml]": {
    "editor.wordWrap": "off"
  }
}
