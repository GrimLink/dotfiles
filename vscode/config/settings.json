{
  // Editor style
  "editor.fontSize": 15,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.showSlider": "always",
  "editor.quickSuggestionsDelay": 30,
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,
  "workbench.colorTheme": "Atom Material Theme",
  "workbench.iconTheme": "file-icons",
  "workbench.colorCustomizations": {
    "[Atom Material Theme]": {
      "badge.background": "#2196f3",
      "badge.foreground": "#fff",
      "activityBarBadge.background": "#2196f3",
      "activityBarBadge.foreground": "#fff",
      "editorRuler.foreground": "#ffffff25"
    }
  },
  "workbench.view.alwaysShowHeaderActions": true,
  "breadcrumbs.enabled": true,
  "zenMode.fullScreen": false,
  // Languages
  "emmet.includeLanguages": {
    "blade.php": "html",
    "vue": "html"
  },
  "files.associations": {
    ".browserslistrc": "properties",
    ".stylelintrc": "json",
    ".stylelintignore": "ignore",
    ".gitmodules": "properties"
  },
  // Format
  "html.format.extraLiners": "",
  "prettier.stylelintIntegration": true,
  "prettier.eslintIntegration": true,
  "[javascript]": {
    "editor.formatOnSave": true
  },
  // Linting
  "php.suggest.basic": false, // For PHP intelliSense
  "css.validate": false, // For stylelint
  "less.validate": false, // For stylelint
  "scss.validate": false, // For stylelint
  "markdown.extension.italic.indicator": "_",
  "placeholderImages.quoteStyle": "double",
  // Other
  "markdown.extension.toc.levels": "2..6",
  "liveServer.settings.donotShowInfoMsg": true,
  "svgviewer.enableautopreview": false
}
