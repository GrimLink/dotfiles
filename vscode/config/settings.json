{
  "editor.fontSize": 15,
  "editor.renderWhitespace": "boundary",
  "editor.wordWrap": "on",
  "editor.rulers": [80, 120],
  "editor.minimap.showSlider": "always",
  "editor.quickSuggestionsDelay": 30,
  "terminal.integrated.fontSize": 14,
  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Atom Material Theme",
  "workbench.iconTheme": "file-icons",
  "workbench.colorCustomizations": {
    "editorRuler.foreground": "#fff1",
    // https://github.com/Tyriar/vscode-snazzy
    "terminal.background": "#282a36",
    "terminalCursor.background": "#282a36",
    "terminalCursor.foreground": "#97979b",
    "terminal.selectionBackground": "#97979b33",
    "terminal.foreground": "#eff0eb",
    "terminal.ansiBlack": "#282a36",
    "terminal.ansiRed": "#ff5c57",
    "terminal.ansiGreen": "#5af78e",
    "terminal.ansiYellow": "#f3f99d",
    "terminal.ansiBlue": "#57c7ff",
    "terminal.ansiMagenta": "#ff6ac1",
    "terminal.ansiCyan": "#9aedfe",
    "terminal.ansiWhite": "#f1f1f0",
    "terminal.ansiBrightBlack": "#686868",
    "terminal.ansiBrightRed": "#ff5c57",
    "terminal.ansiBrightGreen": "#5af78e",
    "terminal.ansiBrightYellow": "#f3f99d",
    "terminal.ansiBrightBlue": "#57c7ff",
    "terminal.ansiBrightMagenta": "#ff6ac1",
    "terminal.ansiBrightCyan": "#9aedfe",
    "terminal.ansiBrightWhite": "#eff0eb",
    "[Atom Material Theme]": {
      "terminal.background": "#232e33",
      "badge.background": "#2196f3",
      "badge.foreground": "#fff",
      "activityBarBadge.background": "#2196f3",
      "activityBarBadge.foreground": "#fff",
      "tab.activeBorder": "#2196f3",
      "panelTitle.activeBorder": "#2196f3",
      "listFilterWidget.background": "#2196f360",
      "list.hoverBackground": "#2196f325",
      "list.activeSelectionBackground": "#2196f360",
      "list.activeSelectionForeground": "#dff5f3",
      "list.dropBackground": "#2196f360",
      "list.focusBackground": "#2196f334",
      "list.inactiveFocusBackground": "#2196f360",
      "statusBar.noFolderBackground": "#2196f3",
      "statusBar.noFolderForeground": "#fff"
    }
  },
  "workbench.view.alwaysShowHeaderActions": true,
  "breadcrumbs.enabled": true,
  "zenMode.fullScreen": false,
  "emmet.includeLanguages": {
    "blade.php": "html",
    "vue": "html"
  },
  "files.defaultLanguage": "markdown",
  "files.associations": {
    ".browserslistrc": "properties",
    ".postcssrc": "json",
    ".sassrc": "json",
    ".stylelintrc": "json",
    ".stylelintignore": "ignore",
    ".gitmodules": "properties"
  },
  // Format
  "html.format.extraLiners": "",
  "prettier.stylelintIntegration": true,
  "prettier.eslintIntegration": true,
  "[scss]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "yzhang.markdown-all-in-one"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "css.validate": false, // For stylelint
  "less.validate": false, // For stylelint
  "scss.validate": false, // For stylelint
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.toc.levels": "2..6",
  "liveServer.settings.donotShowInfoMsg": true,
  "svgviewer.enableautopreview": false,
  "window.zoomLevel": 0,
  "cSpell.allowCompoundWords": true,
  "cSpell.userWords": [
    "Zuidam",
    "Fylgja",
    "getfylgja",
    "Magento",
    "postcss",
    "URI's",
    "mqpacker",
    "repo",
    "unspaced",
    "var's",
    "webp",
    "woff"
  ],
  "git.confirmSync": false
}
