# editorconfig.org - unify code styles
# plugins for text editors: editorconfig.org/#download

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md] {
  trim_trailing_whitespace = false
}

# More line size for better readability
# Code will be minified via a compiler/bundler
[*.{less,sass,scss,styl,js,md}]
indent_size = 4
