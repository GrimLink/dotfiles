# editorconfig.org - unify code styles
# plugins for text editors: editorconfig.org/#download
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# More line size for better readability
# Most code will be minified via a compiler/bundler
# max_line_length will not work in all editors
[*.{less,sass,scss,styl,js,ts,jsx,mjs,md}]
indent_size = 4
max_line_length = 80
