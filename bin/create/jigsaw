#!/bin/bash

echo "Options:";
echo "- blog";
echo "- docs";
echo "(Leave blank for none)";
read -p "Starter Template: " TEMPLATE;
echo "";

if [[ -z "$TEMPLATE" ]]; then
  INIT="init";
else
  INIT="init ${TEMPLATE}";
fi;

if [[ -n "$1" ]]; then
  mkdir $1 &&
  cd $1 &&
  composer require tightenco/jigsaw &&
  ./vendor/bin/jigsaw $INIT
else
  composer require tightenco/jigsaw &&
  ./vendor/bin/jigsaw $INIT
fi;
