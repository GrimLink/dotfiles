# Magento Styles
# Better set via the package.json as script
# TODO: convert to a function with flags
alias m2dev='grunt watch'
function m2build() {
  grunt less:$1
}
function m2rebuild() {
  grunt clean:$1 &&
  grunt exec:$1 &&
  grunt less:$1
}

# Snowdog Styles
alias m2sdev='gulp dev --disableLinting'
alias m2sbuild='gulp styles'
alias m2srebuild='gulp clean && gulp styles'
